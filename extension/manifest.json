{
  "manifest_version": 3,
  "name": "Age Gate for Instagram",
  "version": "1.0.0",
  "description": "Automatically verifies age before allowing access to Instagram",
  "permissions": [
    "webRequest",
    "storage",
    "tabs",
    "downloads"
  ],
  "host_permissions": [
    "https://www.instagram.com/*",
    "http://localhost:5000/*",
    "http://127.0.0.1:5000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://localhost:5000/*", "http://127.0.0.1:5000/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["server_instructions.html", "control_panel_standalone.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}

